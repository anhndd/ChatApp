<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/ImageView_Avatar_FriendRequestRow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/TextView_DisplayName_FriendRequestRow"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/ImageView_Avatar_FriendRequestRow"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_Birthday_FriendRequestRow"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@+id/TextView_DisplayName_FriendRequestRow"
        android:layout_toEndOf="@+id/ImageView_Avatar_FriendRequestRow"
        android:paddingStart="4dp"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/Button_Confirm_FriendRequestRow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/TextView_DisplayName_FriendRequestRow"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/tick_40px" />

    <ImageButton
        android:id="@+id/Button_Delete_FriendRequestRow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/Button_Confirm_FriendRequestRow"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/delete_40px" />
</RelativeLayout>